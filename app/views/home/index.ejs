<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Portal de notícias</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>

	    <div class="container">
			<%if (ultimas_noticias == null || ultimas_noticias.length == 0) {%>
				<div class="row">
					<div class="col-md-12">
						<div class="alert alert-warning">
							Nenhuma notícia registrada.
						</div>
					</div>
				</div>
			<%} else {%>
				<div class="row">
					<div class="col-md-8">
						<div class="noticia_wrapper">
							<span class="noticia_autor">Autor: <%=ultimas_noticias[0].NM_AUTOR_NOTICIA%></span>
							<a href="noticia?id_noticia=<%=ultimas_noticias[0].ID_NOTICIA%>" class="noticia_titulo"><%=ultimas_noticias[0].TX_TITULO_NOTICIA%></a>
							<span class="noticia_data"><%=(ultimas_noticias[0].DT_NOTICIA==null?"Sem data":ultimas_noticias[0].DT_NOTICIA.toISOString().replace(/T/, ' ').replace(/\..+/, ''))%></span>
							<br />
							<p class="noticia_resumo">
								<%=ultimas_noticias[0].TX_RESUMO_NOTICIA%>
							</p>
						</div>
					</div>
					<%if (ultimas_noticias.length > 1) {%>
						<div class="col-md-4">
							<div class="noticia_wrapper">
								<span class="noticia_autor">Autor: <%=ultimas_noticias[1].NM_AUTOR_NOTICIA%></span>
								<a href="noticia?id_noticia=<%=ultimas_noticias[1].ID_NOTICIA%>" class="noticia_titulo"><%=ultimas_noticias[1].TX_TITULO_NOTICIA%></a>
								<span class="noticia_data"><%=(ultimas_noticias[1].DT_NOTICIA==null?"Sem data":ultimas_noticias[0].DT_NOTICIA.toISOString().replace(/T/, ' ').replace(/\..+/, ''))%></span>
								<br />
								<p class="noticia_resumo">
									<%=ultimas_noticias[1].TX_RESUMO_NOTICIA%>
								</p>
							</div>
						</div>
					<%}%>
				</div>

				<div class="row">
					<%for (var i=2; i < ultimas_noticias.length; i++) {%>
					<div class="col-md-4">
						<div class="noticia_wrapper">
							<span class="noticia_autor">Autor: <%=ultimas_noticias[i].NM_AUTOR_NOTICIA%></span>
							<a href="noticia?id_noticia=<%=ultimas_noticias[i].ID_NOTICIA%>" class="noticia_titulo"><%=ultimas_noticias[i].TX_TITULO_NOTICIA%></a>
							<span class="noticia_data"><%=(ultimas_noticias[i].DT_NOTICIA==null?"Sem data":ultimas_noticias[0].DT_NOTICIA.toISOString().replace(/T/, ' ').replace(/\..+/, ''))%></span>
							<br />
							<p class="noticia_resumo">
								<%=ultimas_noticias[i].TX_RESUMO_NOTICIA%>
							</p>
						</div>
					</div>
					<%}%>
				</div>
				<div class="row ver_mais">
					<button type="button" class="btn btn-default"><a href="/noticias">Ver todas as notícias</a></button>
				</div>
			<%}%>
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>